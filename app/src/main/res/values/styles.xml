<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="pinText">
        <item name="android:textSize">@dimen/pin_text_size</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/btn_star_big_off</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">@dimen/pin_horizontal_margin</item>
        <item name="android:padding">@dimen/pin_horizontal_padding</item>
    </style>

    <style name="pinKeyboard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:background">@drawable/pinbutton</item>
        <item name="android:textSize">55sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:minHeight">80dp</item>
    </style>

</resources>
